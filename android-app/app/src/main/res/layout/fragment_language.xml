<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2157">

    <!-- Page Title -->
    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/languages_title"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <ScrollView
        android:id="@+id/languagesScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/settingsTitle"
        app:layout_constraintBottom_toTopOf="@id/btnSaveLanguages"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/settingsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_top_bg"
            android:orientation="vertical"
            android:paddingBottom="24dp"
            android:paddingStart="30dp"
            android:paddingTop="16dp">

            <CheckBox
                android:id="@+id/cbAfrikaans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/afrikaans"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:padding="8dp"/>

            <CheckBox
                android:id="@+id/cbEnglish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/english"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:padding="8dp"/>

            <CheckBox
                android:id="@+id/cbSpanish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/spanish"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:padding="8dp"/>

            <CheckBox
                android:id="@+id/cbFrench"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/french"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:padding="8dp"/>

            <CheckBox
                android:id="@+id/cbZulu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zulu"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:padding="8dp"/>

            <CheckBox
                android:id="@+id/cbGerman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/german"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:padding="8dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSaveLanguages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_selection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
