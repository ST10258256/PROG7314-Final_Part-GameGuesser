<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F9"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textViewHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_game"
            android:textColor="#1A153A"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/game_name"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:textColor="#1A153A"
            android:textColorHint="#C9C8D3"
            android:elevation="2dp" />

        <Spinner
            android:id="@+id/spinnerGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:popupBackground="#FFFFFF"
            android:backgroundTint="#1A153A" />

        <Button
            android:id="@+id/buttonSelectPlatforms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_platforms"
            android:textAllCaps="false"
            android:textColor="#F4F4F9"
            android:backgroundTint="#1A153A"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/textViewSelectedPlatforms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_platforms_selected"
            android:textSize="14sp"
            android:textColor="#C9C8D3"
            android:layout_marginTop="4dp" />

        <EditText
            android:id="@+id/editTextReleaseYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/release_year"
            android:focusable="false"
            android:clickable="true"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:textColor="#1A153A"
            android:textColorHint="#C9C8D3"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editTextDeveloper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/developer"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:textColor="#1A153A"
            android:textColorHint="#C9C8D3"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editTextPublisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/publisher"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:textColor="#1A153A"
            android:textColorHint="#C9C8D3"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/description"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:textColor="#1A153A"
            android:textColorHint="#C9C8D3"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editTextBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/budget"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:textColor="#1A153A"
            android:textColorHint="#C9C8D3"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editTextSaga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/saga"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:textColor="#1A153A"
            android:textColorHint="#C9C8D3"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/spinnerPOV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:popupBackground="#FFFFFF"
            android:backgroundTint="#1A153A" />

        <!-- Clues -->
        <EditText
            android:id="@+id/editTextClue1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/clue_1"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:textColor="#1A153A"
            android:textColorHint="#C9C8D3"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editTextClue2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/clue_2"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:textColor="#1A153A"
            android:textColorHint="#C9C8D3"
            android:layout_marginTop="4dp" />

        <EditText
            android:id="@+id/editTextClue3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/clue_3"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:textColor="#1A153A"
            android:textColorHint="#C9C8D3"
            android:layout_marginTop="4dp" />

        <EditText
            android:id="@+id/editTextClue4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/clue_4"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:textColor="#1A153A"
            android:textColorHint="#C9C8D3"
            android:layout_marginTop="4dp" />

        <EditText
            android:id="@+id/editTextClue5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/clue_5"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:textColor="#1A153A"
            android:textColorHint="#C9C8D3"
            android:layout_marginTop="4dp" />

        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:background="#C9C8D3"
            android:contentDescription="@string/cover_image_preview"
            android:clipToOutline="true" />

        <EditText
            android:id="@+id/editTextCoverImagePath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pick_cover_image"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:textColor="#1A153A"
            android:textColorHint="#C9C8D3"
            android:layout_marginTop="8dp"
            android:focusable="false"
            android:clickable="true" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_game"
            android:textAllCaps="false"
            android:textColor="#F4F4F9"
            android:backgroundTint="#1A153A"
            android:layout_marginTop="20dp"
            android:elevation="3dp" />

    </LinearLayout>
</ScrollView>
